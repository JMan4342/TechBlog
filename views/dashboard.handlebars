{{! Show individual blog posts after login }}
<div id="myPost">
  <a href="../newPost">Create New Post</a>

  {{#each blogs}}
    <header>
      <div>
        <a href="/editPost/{{id}}">{{title}}</a>
        <p>Click to edit</p>
      </div>
      <p>Posted by {{user.username}} on {{date}}</p>
    </header>
    <main>
      <p>{{content}}</p>
    </main>
  {{/each}}
</div>
