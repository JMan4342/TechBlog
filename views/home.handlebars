<div class="card col-11 border-dark mb-3" id="blogPosts">
  {{#each blogs}}
  <header class="card-header row justify-content-between">
    <h2 class="card-title col-4"><a href='/postDetails/{{id}}'>{{title}}</a></h2>
    <p class="col-4 text-end">Posted by {{user.username}} on {{date}}</p>
  </header>
  <main class="card-body">
    <p>{{content}}</p>
  </main>
  {{/each}}
</div>
